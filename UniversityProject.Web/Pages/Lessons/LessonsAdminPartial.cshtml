@model IndexModel
<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title m-b-0 d-inline">List of lessons</h5>
                    <a class="btn btn-outline-primary float-end" asp-page="/Lesson/Create">Add</a>
                </div>
                <div class="table-responsive">
                    <table class="table">
                        <thead class="thead-light">
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Name</th>
                            <th scope="col">Count Students</th>
                            <th scope="col">Actions</th>
                        </tr>
                        </thead>
                        <tbody class="customtable">
                        @foreach (var lesson in Model?.LessonsUserDto?.Lessons)
                        {
                            <tr class="data-tr" data-href="/lesson/@lesson.Id">
                                <td>@lesson.Id</td>
                                <td>@lesson.Name</td>
                                <td>@lesson.CountStudents</td>
                                <td>
                                    <form method="post">

                                        <a class="btn btn-outline-primary btn-round" asp-page="/Lesson/Edit" asp-route-lessonId="@lesson.Id">Edit</a>
                                        <button class="btn btn-outline-danger" asp-page="/Lesson/Delete" asp-route-lessonId="@lesson.Id">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
$(function() {
    $("tr.data-tr").click(function() {
        window.location =  $(this).data("href");
    });
});
</script>